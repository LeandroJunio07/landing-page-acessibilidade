    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS Animation -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- VLibras -->
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <!-- Main JS -->
    <script>
        // Initialize AOS animation
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        
        // Navbar scroll effect
        $(window).scroll(function() {
            if ($(this).scrollTop() > 100) {
                $('.navbar').addClass('scrolled');
            } else {
                $('.navbar').removeClass('scrolled');
            }
        });
        
        // Smooth scrolling for anchor links
        $('a[href*="#"]').on('click', function(e) {
            e.preventDefault();
            
            $('html, body').animate(
                {
                    scrollTop: $($(this).attr('href')).offset().top - 70,
                },
                500,
                'linear'
            );
        });
        
        // Back to top button
        $(window).scroll(function() {
            if ($(this).scrollTop() > 300) {
                $('.back-to-top').addClass('active');
            } else {
                $('.back-to-top').removeClass('active');
            }
        });
        
        // Tooltip initialization
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        
        // Form submission
        $('form').submit(function(e) {
            e.preventDefault();
            alert('Obrigado por sua mensagem! Entraremos em contato em breve.');
            this.reset();
        });
        
        // Accessibility features
        // High contrast toggle
        $('#high-contrast-toggle').click(function() {
            $('body').toggleClass('high-contrast');
            localStorage.setItem('highContrast', $('body').hasClass('high-contrast'));
        });
        
        // Check for saved high contrast preference
        if (localStorage.getItem('highContrast') === 'true') {
            $('body').addClass('high-contrast');
            $('#high-contrast-toggle').prop('checked', true);
        }
        
        // Font size adjustment
        $('#font-increase').click(function() {
            changeFontSize(1);
        });
        
        $('#font-decrease').click(function() {
            changeFontSize(-1);
        });
        
        $('#font-reset').click(function() {
            $('body').css('font-size', '');
            localStorage.removeItem('fontSize');
        });
        
        function changeFontSize(direction) {
            var currentSize = parseFloat($('body').css('font-size'));
            if (isNaN(currentSize)) currentSize = 16; // default
            
            var newSize = currentSize + (direction * 2);
            if (newSize >= 12 && newSize <= 24) { // reasonable limits
                $('body').css('font-size', newSize + 'px');
                localStorage.setItem('fontSize', newSize);
            }
        }
        
        // Check for saved font size preference
        var savedFontSize = localStorage.getItem('fontSize');
        if (savedFontSize) {
            $('body').css('font-size', savedFontSize + 'px');
        }
        
        // Animation on scroll for stats
        $(window).scroll(function() {
            $('.stats-number').each(function() {
                var position = $(this).offset().top;
                var scroll = $(window).scrollTop();
                var windowHeight = $(window).height();
                
                if (scroll > position - windowHeight + 200) {
                    if (!$(this).hasClass('animated')) {
                        animateValue(this, 0, parseInt($(this).text()), 1000);
                        $(this).addClass('animated');
                    }
                }
            });
        });
        
        function animateValue(obj, start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                obj.innerHTML = Math.floor(progress * (end - start) + start);
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }
        
        // Trigger stats animation if already in view on page load
        $(document).ready(function() {
            $('.stats-number').each(function() {
                var position = $(this).offset().top;
                var scroll = $(window).scrollTop();
                var windowHeight = $(window).height();
                
                if (scroll > position - windowHeight + 200) {
                    if (!$(this).hasClass('animated')) {
                        animateValue(this, 0, parseInt($(this).text()), 1000);
                        $(this).addClass('animated');
                    }
                }
            });
        });
        
        // Video modal
        $('.video-play-btn').click(function(e) {
            e.preventDefault();
            var videoSrc = $(this).data('video');
            $('#videoModal iframe').attr('src', videoSrc + '?autoplay=1');
            $('#videoModal').modal('show');
        });
        
        $('#videoModal').on('hidden.bs.modal', function() {
            $('#videoModal iframe').attr('src', '');
        });
        
        // Keyboard navigation for accordion
        $('.accordion-button').keydown(function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                $(this).click();
            }
        });
        
        // Focus management for modal
        $('#videoModal').on('shown.bs.modal', function() {
            $('#videoModal iframe').focus();
        });
        
        // Initialize VLibras
        new window.VLibras.Widget('https://vlibras.gov.br/app');
        
        // Screen reader simulation
        $('#enable-voice').click(function() {
            if ('speechSynthesis' in window) {
                var speechMsg = new SpeechSynthesisUtterance();
                speechMsg.text = document.querySelector('main').innerText.replace(/\s+/g, ' ').substring(0, 10000);
                speechMsg.lang = 'pt-BR';
                speechMsg.rate = 1;
                
                if (speechSynthesis.speaking) {
                    speechSynthesis.cancel();
                    $(this).html('<i class="fas fa-volume-up"></i> Leitor de Tela');
                } else {
                    window.speechSynthesis.speak(speechMsg);
                    $(this).html('<i class="fas fa-volume-mute"></i> Parar Leitura');
                }
            } else {
                alert('Seu navegador não suporta a API de síntese de voz.');
            }
        });
        
        // Keyboard navigation mode
        $('#keyboard-navigation').click(function() {
            $('body').toggleClass('keyboard-navigation');
            if ($('body').hasClass('keyboard-navigation')) {
                $(this).html('<i class="fas fa-mouse-pointer"></i> Modo Mouse');
                $('a, button, input, [tabindex]').css('outline', '2px solid #e74c3c');
            } else {
                $(this).html('<i class="fas fa-keyboard"></i> Navegação por Teclado');
                $('a, button, input, [tabindex]').css('outline', '');
            }
        });
    </script>
</body>
</html>
